<html>
<head>
    <style type="text/css">
        #boreders {
            border-radius: 5px;
        }

        #body {
            background-image: url("/background.jpg");
            background-size: cover;
            background-repeat: no-repeat;
        }

        #look {
            width: 100%;
            position: center;
            background-color: paleturquoise;
        }

        #look1 {
            background-color: turquoise;
        }
    </style>
</head>
<body id="body">

    


    @if (ViewBag.Error != null)
    {
        @ViewBag.Error
    }

    <div class="container">
        <div class="page-header">
            <div class="text-center text-info">
                <div>
                    @ViewBag.Message
                </div>
                <h3> <font color="navy">Napravite novi nalog</font></h3>
            </div>
        </div>
    </div>

    <div class="container" align="center">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading" id="look1">
                        <h3 class="panel-title">
                            Popunite polja
                        </h3>
                    </div>
                    <div class="panel-body" id="look">
                        <form method="post" action="/Home/Registracija">
                            <div class="row">
                                <div class="col-md-8 col-md-offset-2">
                                    <input id="boreders" type="text" name="korisnickoIme" placeholder="Korisnicko ime" />
                                    <hr />
                                    <input id="boreders" type="password" name="lozinka" placeholder="Lozinka" />
                                    <hr />
                                    <input id="boreders" type="text" name="ime" placeholder="Ime" />
                                    <hr />
                                    <input id="boreders" type="text" name="prezime" placeholder="Prezime" />
                                    <hr />
                                    <select id="boreders" name="pol" class="form-control input-sm">
                                        <option value="MUSKO">
                                            Musko
                                        </option>
                                        <option value="ZENSKO">
                                            Zensko
                                        </option>
                                    </select>
                                    <hr />
                                    <input id="boreders" type="email" name="email" placeholder="example@gmail.com" />
                                    <hr />
                                    <input id="boreders" type="date" name="datumRodjenja" placeholder="Datum rodjenja" />
                                    <hr />
                                    @if (Session["admin"] != null)
                                    {
                                        <input type="hidden" name="uloga" value="MENADZER" />
                                    }
                                    else
                                    {
                                        <input type="hidden" name="uloga" value="TURISTA" />
                                    }

                                    <input id="boreders" type="submit" value="Dodajte" class="btn btn-info btn-block" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div>
            @if (Session["admin"] == null)
            {
                <a href="/Home/Login" style="color:navy; font-size:20px">Prijavite se na postojeci nalog</a>
            }

        </div>
    </div>
</body>
</html>

